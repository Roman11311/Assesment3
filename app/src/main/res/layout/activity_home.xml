<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/img_6" />

            <!--Logo Name -->

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="TRMS Mobile House"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/menu"
                android:layout_marginTop="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="64dp"
                android:src="@drawable/ic_menu"/>


        </LinearLayout>

        <!-- Search Box -->
        <LinearLayout
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_purple"
            android:orientation="horizontal"
            android:padding="16dp">

            <EditText
                android:id="@+id/searchText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:hint="Search"
                android:padding="8dp" />
            <ImageButton
                android:id="@+id/searchBar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Search" />
        </LinearLayout>

        <!-- Product Container -->
        <LinearLayout
            android:id="@+id/productContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Product Item 1 -->
            <LinearLayout
                android:id="@+id/productItem1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/productImage1"
                    android:layout_width="190dp"
                    android:layout_height="126dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy S24 Ultra 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <!-- Product Price -->
            </LinearLayout>

            <!-- Product Item 2 -->
            <LinearLayout
                android:id="@+id/productItem2"
                android:layout_width="0dp"
                android:layout_height="232dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:orientation="vertical"
                android:padding="16dp"> <!-- Change this to vertical -->

                <ImageView
                    android:id="@+id/productImage2"
                    android:layout_width="169dp"
                    android:layout_height="138dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_1" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Huawei Pura 70 Pro 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Product Price -->
            </LinearLayout>
        </LinearLayout>
        <!-- Product Container -->
        <LinearLayout
            android:layout_marginTop="-28dp"
            android:id="@+id/productContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"> <!-- Change this to horizontal -->

            <!-- Product Item 3 -->
            <LinearLayout
                android:id="@+id/productItem3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:padding="16dp"
                android:orientation="vertical"> <!-- Change this to vertical -->

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/productImage3"
                    android:layout_width="190dp"
                    android:layout_height="126dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_2" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iphone 15 Pro Max 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <!-- Product Price -->
            </LinearLayout>

            <!-- Product Item 4 -->
            <LinearLayout
                android:id="@+id/productItem4"
                android:layout_width="0dp"
                android:layout_height="232dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:orientation="vertical"
                android:padding="16dp"> <!-- Change this to vertical -->

                <ImageView
                    android:id="@+id/productImage4"
                    android:layout_width="169dp"
                    android:layout_height="138dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_3" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Google Pixel Pro 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Product Price -->
            </LinearLayout>
        </LinearLayout>
        <!-- Product Container -->
        <LinearLayout
            android:id="@+id/productContainer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-28dp"
            android:orientation="horizontal"> <!-- Change this to horizontal -->

            <!-- Product Item 5 -->
            <LinearLayout
                android:id="@+id/productItem5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:padding="16dp"
                android:orientation="vertical"> <!-- Change this to vertical -->

                <!-- Product Image -->
                <ImageView
                    android:id="@+id/productImage5"
                    android:layout_width="190dp"
                    android:layout_height="126dp"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_4" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asus Red Magic 9 Pro 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <!-- Product Price -->
            </LinearLayout>

            <!-- Product Item 6 -->
            <LinearLayout
                android:id="@+id/productItem6"
                android:layout_width="0dp"
                android:layout_height="232dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_effect"
                android:clickable="true"
                android:onClick="onProductItemClick"
                android:orientation="vertical"
                android:padding="16dp"> <!-- Change this to vertical -->

                <ImageView
                    android:id="@+id/productImage6"
                    android:layout_width="169dp"
                    android:layout_height="138dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_5" />

                <!-- Product Name -->
                <TextView
                    android:id="@+id/productName6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Vivo X100 Pro 5G"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

        <!-- Navigation Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/light_purple"
            android:layout_alignParentBottom="true"
            android:padding="1dp">

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/cartButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_cart"
                android:background="@null" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:src="@drawable/ic_search"
                android:background="@null" />

            <ImageButton
                android:id="@+id/accountButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@null"
                android:src="@drawable/ic_account" />


    </LinearLayout>



</RelativeLayout>